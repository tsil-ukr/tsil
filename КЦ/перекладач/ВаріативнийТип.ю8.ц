взяти визначення КЦ;

секція КЦ {
  зовнішня дія скомпілювати_варіативний_тип(компілятор: адреса<Компілятор>, контекст: Контекст, дані_варіативного_типу: розбирач::ДаніСполукиВаріативнийТип, місцезнаходження: розбирач::Місцезнаходження): РезультатОбʼєктаТипу {
    змінна типи = виділити_памʼять<адреса<ОбʼєктТипу>>(компілятор, дані_варіативного_типу.типи.розмір);

    змінна п: позитивне = 0;

    поки п < дані_варіативного_типу.типи.розмір {
      змінна результат_типу = скомпілювати_значення_як_тип(
        компілятор,
        контекст,
        дані_варіативного_типу.типи.дані[п],
        так
      );

      якщо результат_типу.помилка != пусто {
        звільнити_памʼять(компілятор, типи);

        вернути результат_типу;
      }

      типи[п] = результат_типу.обʼєкт_типу;

      п += 1;
    }

    змінна обʼєкт_типу_варіації = створити_варіативний_тип(
      компілятор,
      дані_варіативного_типу.типи.розмір,
      типи
    );

    вернути РезультатОбʼєктаТипу {
      обʼєкт_типу_варіації,
      помилка = пусто
    };
  }
}