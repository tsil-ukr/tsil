взяти визначення КЦ;

секція КЦ {
  місцева дія скомпілювати_тип_дії(компілятор: адреса<Компілятор>, контекст: Контекст, дані_типу_дії: розбирач::ДаніСполукиТипДії, місцезнаходження: розбирач::Місцезнаходження): РезультатОбʼєктаТипу {
    змінна результат_параметрів = скомпілювати_параметри_дії(компілятор, контекст, пусто, дані_типу_дії.параметри, місцезнаходження);
    якщо результат_параметрів.помилка != пусто {
      вернути РезультатОбʼєктаТипу {
        ...,
        помилка = результат_параметрів.помилка
      };
    }

    змінна результат_типу = скомпілювати_значення_як_тип(компілятор, контекст, дані_типу_дії.тип_результату, так);
    якщо результат_типу.помилка != пусто {
      вернути РезультатОбʼєктаТипу {
        ...,
        помилка = результат_типу.помилка
      };
    }

    змінна обʼєкт_типу = створити_тип_дії(
      компілятор,
      результат_параметрів.параметри,
      результат_типу.обʼєкт_типу
    );

    вернути РезультатОбʼєктаТипу {
      обʼєкт_типу,
      помилка = пусто
    };
  }
}