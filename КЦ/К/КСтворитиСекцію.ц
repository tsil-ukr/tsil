взяти визначення К;

секція цк {
  місцева дія скомпілювати_створити_секцію(К: комірка<Компілятор>, блок: комірка<Блок>, інформація_шаблону: комірка<ІнформаціяШаблону>, середовище: комірка<Середовище>, місцезнаходження: комірка<Місцезнаходження>, дані: комірка<АСДДаніСтворитиСекцію>): РезультатЗначення {
    ціль назва = дані.ідентифікатор.значення;

    ціль середовище_секції = створити_середовище(середовище);

    ціль сек = виділити<Секція>();
    сек.назва = назва;
    сек.середовище = середовище_секції;

    середовище_секції._секція = сек;

    ціль обʼєкт_компіляції = ОбʼєктКомпіляції { ВидОКСекція, сек };
    ціль значення = Значення { ВидЗначенняОК, к = обʼєкт_компіляції };

    змінити_в_середовищі(середовище, назва, обʼєкт_компіляції);

    ціль результат_компіляції_тіла_секції = скомпілювати_тіло_секції(К, середовище_секції, дані.тіло);
    якщо результат_компіляції_тіла_секції.помилка != пусто {
      вернути РезультатЗначення { Значення {}, результат_компіляції_тіла_секції.помилка };
    }

    вернути РезультатЗначення { значення, пусто };
  }
}