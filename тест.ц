//структура комірка<Т> адреса;
//структура памʼять<Т> адреса;

синонім адреса = невідома_памʼять;

зовнішня дія malloc(size: ц32): адреса;

дія виділити<Т>(): комірка<Т>;
дія виділити<Т>(кількість: ц32): памʼять<Т>;

дія виділити<Т>(): комірка<Т> {
  вернути malloc(Т::розмір як ц32) як комірка<Т>;
}

дія виділити<Т>(кількість: ц32): памʼять<Т> {
  вернути malloc(кількість * (Т::розмір як ц32)) як памʼять<Т>;
}

зовнішня дія main() {
  виділити<ц32>(1);
  виділити<ц32>();
}