секція біб {
  секція юнікод {
    місцева дія ю8_в_ю16(ю8: памʼять<ц8>, розмір: позитивне): памʼять<ц16>;
    місцева дія ю8_в_ю32(ю8: памʼять<ц8>, розмір: позитивне): памʼять<ц32>;
    місцева дія ю16_в_ю8(ю16: памʼять<ц16>, розмір: позитивне): памʼять<ц8>;
    місцева дія ю16_в_ю32(ю16: памʼять<ц16>, розмір: позитивне): памʼять<ц32>;
    місцева дія ю32_в_ю8(ю32: памʼять<ц32>, розмір: позитивне): памʼять<ц8>;
    місцева дія ю32_в_ю16(ю32: памʼять<ц32>, розмір: позитивне): памʼять<ц16>;
  }
}

секція біб {
  секція юнікод {
    місцева дія ю8_в_ю16(ю8: памʼять<ц8>, розмір: позитивне): памʼять<ц16> {
      змінна буфер = виділити<ц16>(розмір);
      змінна розмір_буфера = 0;
      змінна х = 0;
      поки х < розмір {
        // ...
        х = х + 1;
      }
      вернути буфер;
    }
  }
}